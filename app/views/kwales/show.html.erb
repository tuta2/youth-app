<section style="min-height: calc(90vh - 40px);padding: 180px 40px 100px 40px;">
  <div style="background-color: rgba(174, 182, 191, 0.4);border-radius: 10px;width: 95%;margin: auto;padding: 20px 20px 80px 20px;">
    

    <%# link_to 'Download Pdf', kwale_path(@kwale, format: :pdf) %>

    <div style="padding: 50px 0 40px 40px;text-align: left;">
      <a style="border: 4px solid #641E16;color: #641E16;padding: 10px 40px 10px 40px;font-size: 20px;font-weight: bold;" href="/kwale/new">
        <i class="fa-solid fa-plus">&ensp;</i>
        <span>Add Record</span>
      </a>
    </div>

    <div style="padding: 10px;">
      <% flash.each do |type, msg| %>
        <%= content_tag :div, msg, class: build_alert_classes(type) %>
      <% end %>
    </div>

    <div style="padding: 0 40px 20px 40px;">
      <h2 style="padding-bottom: 20px;">SUB-COUNTY INVESTITURE</h2>
      
      <div class="table-responsive">
        <table class="table table-hover">
          <tr style="font-size: 1.5rem;">
            <th>SUB-COUNTY</th>
            <th colspan="4">INVESTITURE</th>
            <th>TOTAL</th>
          </tr>
          <tr style="font-size: 1.4rem;">
            <td></td>
            <td><b>Sungura</b></td>
            <td><b>Chipukizi</b></td>
            <td><b>Mwamba</b></td>
            <td><b>Jasiri</b></td>
            <td></td>
          </tr>

          <tr style="font-size: 1.2rem;">
            <td><b><%= @kwale.sub_county %></b></td>
            <td><%= @kwale.investiture_sungura %></td>
            <td><%= @kwale.investiture_chipukizi %></td>
            <td><%= @kwale.investiture_mwamba %></td>
            <td><%= @kwale.investiture_jasiri %></td>
            <td><b><%= @mombasa.total %></b></td>
          </tr>

          
        </table>
      </div>
    </div>

    <div style="text-align: right;padding: 20px 40px 20px 0;">
      <a style="border: 4px solid #641E16;color: #641E16;padding: 10px 40px 10px 40px;font-size: 20px;font-weight: bold;" href="#">
        <i class="fa-solid fa-plus">&ensp;</i>
        <span>Download Record</span>
      </a>
    </div>
  </div>
</section>
